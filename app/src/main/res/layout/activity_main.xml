<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/acyncTaskBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Async Task example"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/callbackBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="callback example"
        app:layout_constraintEnd_toEndOf="@+id/acyncTaskBtn"
        app:layout_constraintStart_toStartOf="@+id/acyncTaskBtn"
        app:layout_constraintTop_toBottomOf="@+id/acyncTaskBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>